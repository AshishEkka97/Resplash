<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:id="@+id/user_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">
    </LinearLayout>

    <ImageView
        android:id="@+id/user_image_view"
        android:layout_width="@dimen/user_profile_picture_small_size"
        android:layout_height="@dimen/user_profile_picture_small_size"
        android:layout_marginStart="@dimen/keyline_5"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@color/green_100"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/user_text_view"
        style="@style/TextAppearance.Resplash.Subtitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_6"
        android:layout_marginEnd="@dimen/keyline_5"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@id/user_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/user_image_view"
        app:layout_constraintBottom_toBottomOf="@id/user_image_view"
        tools:text="Brandon Lam" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topic_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/keyline_6"
        app:cardElevation="0dp"
        app:layout_goneMarginTop="@dimen/keyline_0"
        app:layout_constraintTop_toBottomOf="@id/user_image_view">

        <ImageView
            android:id="@+id/topic_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collection_max_height"
            android:foreground="@drawable/collection_gradient_overlay"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            tools:src="@color/red_200"
            tools:ignore="ContentDescription" />
    </com.google.android.material.card.MaterialCardView>

    <com.b_lam.resplash.ui.widget.TopicStatusView
        android:id="@+id/topic_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/keyline_7"
        android:layout_marginBottom="@dimen/keyline_5"
        app:layout_constraintBottom_toTopOf="@id/topic_name_text_view"
        app:layout_constraintStart_toStartOf="@id/topic_card_view" />

    <TextView
        android:id="@+id/topic_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/keyline_7"
        android:layout_marginBottom="@dimen/keyline_5"
        android:textColor="@color/white"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/topic_count_text_view"
        style="@style/TextAppearance.Resplash.Headline6"
        tools:text="Landscapes" />

    <TextView
        android:id="@+id/topic_count_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/keyline_7"
        android:textColor="@color/white"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="@id/topic_card_view"
        style="@style/TextAppearance.Resplash.Subtitle2"
        tools:text="1234 Photos" />
</androidx.constraintlayout.widget.ConstraintLayout>